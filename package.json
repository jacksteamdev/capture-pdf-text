{
  "name": "capture-pdf-text",
  "version": "1.0.3",
  "description": "Capture pdf text as paragraphs",
  "license": "MIT",
  "author": {
    "name": "Jack Steam",
    "email": "jacksteamdev@gmail.com"
  },
  "main": "dist/capture-pdf-text.cjs.js",
  "module": "dist/capture-pdf-text.esm.js",
  "browser": "dist/capture-pdf-text.umd.js",
  "dependencies": {
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.0",
    "live-server": "^1.2.0",
    "prettier": "^1.9.2",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0"
  },

  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "test": "jest",
    "test-ci":
      "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test-watch": "jest --watch --coverage",
    "cover-watch":
      "live-server --open=./coverage/lcov-report/index.html --watch=./coverage/lcov-report/ --port=8081",
    "precommit": "lint-staged",
    "pretest": "eslint src/** test/**"
  },
  "files": ["dist"],
  "jest": {
    "collectCoverageFrom": [
      "src/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --fix src/**",
      "git add"
    ],
    "*.{json,css,md}": ["prettier --write", "git add"]
  },
  "prettier": {
    "printWidth": 65,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
